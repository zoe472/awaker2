.item
  - new.each do |like|
    - tweet = Tweet.find_by(id: like.tweet_id)
    .item__box
      = link_to "/tweets/#{tweet.id}", method: :get, class: "item__link" do
        = image_tag tweet.toukouimages.first.image.url, class: "item__box__view"
      .item__box__box
        - if user_signed_in? && current_user.id == tweet.user_id
          = link_to "/tweets/#{tweet.id}", method: :delete, class: "item__box__delete" do
            %i.fas.fa-window-close
      .item__name
        .side-bar__menue__device
          = link_to "/users/#{tweet.user.id}",class:"side-bar__menue__link" do
            = image_tag "first-icon.PNG" ,class: "side-bar__menue__device__icon space"
        .side-bar__menue__copy
          = tweet.catchcopy
        .side-bar__menue__star
          %i.fas.fa-star
          = tweet.likes.count
        