 
.item
  - @new.each do |tweet|
    .item__box
      = link_to "/tweets/#{tweet.id}", method: :get, class: "item__link" do
        = image_tag tweet.image.url, class: "item__box__view"
      .item__box__text
        = tweet.category
      .item__box__box
        - if user_signed_in? && current_user.id == tweet.user_id
          = link_to "/tweets/#{tweet.id}", method: :delete, class: "item__box__delete" do
            %i.fas.fa-window-close
      %ul.item__name
        %li.side-bar__menue__device
          = link_to "/users/#{tweet.user.id}",class:"side-bar__menue__link" do
            = image_tag "first-icon.PNG" ,class: "side-bar__menue__device__icon space"
        = tweet.text
        %i.fas.fa-star
        = tweet.likes.count
        