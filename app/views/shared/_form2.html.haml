
.item
  .item__title
    .item__title__title
      新規投稿
  .item__form
    .item__contents
      = form_with model: @tweet, local: true do |f|
        %h3
          アイテム画像を選択(5枚まで)
        .post__drop__box__container
          .prev-content
          .item__contents__photoflame__container
            %label{for: "item_images_attributes_0_image", class: "item__contents__photoflame__container__label-box hidden-field", id: "label-box--0"}
              %pre.item__contents__photoflame__container__label-box__text-visible クリックしてファイルをアップロード
          .hidden-content
            = f.fields_for :toukouimages do |i|
              %label{class: "hidden-field first"}
                クリックしてファイルをアップロード
                = i.file_field :image, class: "hidden-field"
              %input{class:"hidden-field", type: "file", name: "tweet[toukouimages_attributes][1][image]", id: "tweet_toukouimages_attributes_1_image" }
              %input{class:"hidden-field", type: "file", name: "tweet[toukouimages_attributes][2][image]", id: "tweet_toukouimages_attributes_2_image" }
              %input{class:"hidden-field", type: "file", name: "tweet[toukouimages_attributes][3][image]", id: "tweet_toukouimages_attributes_3_image" }
              %input{class:"hidden-field", type: "file", name: "tweet[toukouimages_attributes][4][image]", id: "tweet_toukouimages_attributes_4_image" }
        

        .item__date
        %h3
          キャッチコピー(タイトル)
        = f.text_field :catchcopy, placeholder: "例)この季節にぴったりのアイテム！" , rows: "10",class: 'item__date__comment__title'
        %h3
          アイテムのURL(販売ページなど)
        = f.text_field :url, placeholder: "商品ページのリンクなど" , rows: "10",class: 'item__date__comment__title'
        %h3
          紹介文
        = f.text_area :text, placeholder: "紹介文を入力" , rows: "10",class: 'item__date__comment__text'
        %h3
          カテゴリー
        .cp_ipselect.cp_sl01
          = f.collection_select :category_id, @parents, :id, :name, { prompt: "---" }
        %h3
          ブランド
        .cp_ipselect.cp_sl01
          = f.collection_select :brand_id, @brand, :id, :name, { prompt: "---" }
        %h3
          タグ(5個まで)
        = f.text_field :tag_names, placeholder: "例)おすすめ, 長袖, 限定モデル,",class: 'item__date__comment__title', id: 'tag'
        
        .item__date__bottan
          .item__date__bottan__shop
            = f.submit "投稿する", class: 'item__date__bottan__shop__send'
            
      